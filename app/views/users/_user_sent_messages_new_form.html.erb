<%= form_with(model: @message, local: true) do |f| %>

  <%= f.hidden_field :sender_user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :receiver_user_id %>

    <%= f.text_field :receiver_user_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :listing_id %>

    <%= f.collection_select :listing_id, Listing.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: "3", class: "form-control" %>
  </div>

  <%= f.submit "Create message", class: "btn btn-block btn-outline-secondary" %>
<% end %>
