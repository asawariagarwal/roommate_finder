<div class="card mb-3">
  <h2 class="card-header h4">
    Amenity Preference #<%= amenity_preference.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Amenity</dt>
      <dd>
        <% if @amenity_preference.amenity.present? %>
          <%= link_to amenity_preference.amenity, amenity_preference.amenity %>
        <% end %>
      </dd>

      <dt>Preference</dt>
      <dd>
        <% if @amenity_preference.preference.present? %>
          <%= link_to amenity_preference.preference, amenity_preference.preference %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back amenity_preference, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_amenity_preference_url(amenity_preference), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to amenity_preference, method: :delete, data: { confirm: "Do you really want to delete this amenity_preference?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(amenity_preference.updated_at) %> ago
  </div>
</div>
