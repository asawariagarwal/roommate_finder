<div class="card mb-3">
  <h2 class="card-header h4">
    Profile #<%= profile.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @profile.user.present? %>
          <%= link_to profile.user, profile.user %>
        <% end %>
      </dd>

      <dt>First name</dt>
      <dd><%= profile.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= profile.last_name %></dd>

      <dt>Gender</dt>
      <dd><%= profile.gender %></dd>

      <dt>Age</dt>
      <dd><%= profile.age %></dd>

      <dt>Occupation</dt>
      <dd><%= profile.occupation %></dd>

      <dt>Current city</dt>
      <dd><%= profile.current_city %></dd>

      <dt>Pet owner</dt>
      <dd><%= profile.pet_owner %></dd>

      <dt>Pet description</dt>
      <dd><%= profile.pet_description %></dd>

      <dt>About me</dt>
      <dd><%= profile.about_me %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back profile, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @profile.user %>
          <%= link_to edit_profile_url(profile), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @profile.user %>
          <%= link_to profile, method: :delete, data: { confirm: "Do you really want to delete this profile?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(profile.updated_at) %> ago
  </div>
</div>
