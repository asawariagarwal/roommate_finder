<%= search_form_for @q, :class => collapse_search_form, :id => "profiles_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :about_me_cont, "About me contains" %>
    <%= f.text_field :about_me_cont, :class => "form-control", :placeholder => "About me contains" %>
  </div>

  <div class="form-group">
    <%= f.label :pet_description_cont, "Pet description contains" %>
    <%= f.text_field :pet_description_cont, :class => "form-control", :placeholder => "Pet description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :pet_owner_eq, "Pet owner" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :pet_owner_eq, "1", checked: ((params[:q] && params[:q][:pet_owner_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :pet_owner_eq, "0", checked: ((params[:q] && params[:q][:pet_owner_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :pet_owner_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :current_city_cont, "Current city contains" %>
    <%= f.text_field :current_city_cont, :class => "form-control", :placeholder => "Current city contains" %>
  </div>

  <div class="form-group">
    <%= f.label :occupation_cont, "Occupation contains" %>
    <%= f.text_field :occupation_cont, :class => "form-control", :placeholder => "Occupation contains" %>
  </div>

  <div class="form-group">
    <%= f.label :age, "Age" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :age_gteq, :class => "form-control", :placeholder => "Age greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :age_lteq, :class => "form-control", :placeholder => "Age less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name_cont, "Last name contains" %>
    <%= f.text_field :last_name_cont, :class => "form-control", :placeholder => "Last name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :first_name_cont, "First name contains" %>
    <%= f.text_field :first_name_cont, :class => "form-control", :placeholder => "First name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/profiles" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#profiles_filters">
  Show filters
</a>
