<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Building Amenities

    <a data-toggle="collapse" href="#building_building_amenities_new_form">
      Add building amenity
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @building.building_amenities.each do |building_amenity| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to building_amenity, building_amenity %>

        <%= link_to building_amenity, method: :delete, data: { confirm: "Do you really want to delete this building_amenity" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="building_building_amenities_new_form">
        <%= render partial: "buildings/building_building_amenities_new_form" %>
      </div>
    </div>

  </ul>
</div>
