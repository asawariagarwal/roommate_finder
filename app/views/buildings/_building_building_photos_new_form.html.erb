<%= form_with(model: @building_photo, local: true) do |f| %>

  <%= f.hidden_field :building_id, value: @building.id %>

  <div class="form-group">
    <%= f.label :photo %>

    <%= f.file_field :photo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :caption %>

    <%= f.text_field :caption, class: "form-control" %>
  </div>

  <%= f.submit "Create building photo", class: "btn btn-block btn-outline-secondary" %>
<% end %>
