<% was_validated = building.errors.any? %>

<%= form_with(model: building, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = building.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% building.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% location_class = "form-control" %>
    <% location_was_invalid = building.errors.include?(:location) %>

    <% if was_validated %>
      <% if location_was_invalid %>
        <% location_class << " is-invalid" %>
      <% else %>
        <% location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :location %>
    <%= f.text_field :location, class: location_class, placeholder: "Enter location" %>
    <% if location_was_invalid %>
      <% building.errors.full_messages_for(:location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% building_type_class = "form-control" %>
    <% building_type_was_invalid = building.errors.include?(:building_type) %>

    <% if was_validated %>
      <% if building_type_was_invalid %>
        <% building_type_class << " is-invalid" %>
      <% else %>
        <% building_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :building_type %>
    <%= f.select :building_type, options_for_select(Building.building_types.keys), {}, class: "form-control" %>
    <% if building_type_was_invalid %>
      <% building.errors.full_messages_for(:building_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% average_user_rating_class = "form-control" %>
    <% average_user_rating_was_invalid = building.errors.include?(:average_user_rating) %>

    <% if was_validated %>
      <% if average_user_rating_was_invalid %>
        <% average_user_rating_class << " is-invalid" %>
      <% else %>
        <% average_user_rating_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :average_user_rating %>
    <%= f.text_field :average_user_rating, class: average_user_rating_class, placeholder: "Enter average user rating" %>
    <% if average_user_rating_was_invalid %>
      <% building.errors.full_messages_for(:average_user_rating).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% neighborhood_class = "form-control" %>
    <% neighborhood_was_invalid = building.errors.include?(:neighborhood) %>

    <% if was_validated %>
      <% if neighborhood_was_invalid %>
        <% neighborhood_class << " is-invalid" %>
      <% else %>
        <% neighborhood_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :neighborhood %>
    <%= f.text_field :neighborhood, class: neighborhood_class, placeholder: "Enter neighborhood" %>
    <% if neighborhood_was_invalid %>
      <% building.errors.full_messages_for(:neighborhood).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
