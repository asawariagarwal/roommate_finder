    <% average_user_rating_class = "form-control" %>
    <% average_user_rating_was_invalid = building.errors.include?(:average_user_rating) %>

    <% if was_validated %>
      <% if average_user_rating_was_invalid %>
        <% average_user_rating_class << " is-invalid" %>
      <% else %>
        <% average_user_rating_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :average_user_rating %>
    <!-- Input for average_user_rating start -->
    <%= f.text_field :average_user_rating, class: average_user_rating_class, placeholder: "Enter average user rating" %>
    <!-- Input for average_user_rating end -->
    <% if average_user_rating_was_invalid %>
      <% building.errors.full_messages_for(:average_user_rating).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for average_user_rating end -->
  <!-- Label and input for neighborhood start -->
  <div class="form-group">
    <% neighborhood_class = "form-control" %>
    <% neighborhood_was_invalid = building.errors.include?(:neighborhood) %>

    <% if was_validated %>
      <% if neighborhood_was_invalid %>
