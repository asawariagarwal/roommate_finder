<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Building Photos

    <a data-toggle="collapse" href="#building_building_photos_new_form">
      Add building photo
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @building.building_photos.each do |building_photo| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to building_photo, building_photo %>

        <%= link_to building_photo, method: :delete, data: { confirm: "Do you really want to delete this building_photo" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="building_building_photos_new_form">
        <%= render partial: "buildings/building_building_photos_new_form" %>
      </div>
    </div>

  </ul>
</div>
