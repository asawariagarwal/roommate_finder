<div class="card mb-3">
  <h2 class="card-header h4">
    Building #<%= building.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= building.name %></dd>

      <dt>Location</dt>
      <dd><%= building.location %></dd>

      <dt>Building type</dt>
      <dd><%= building.building_type %></dd>

      <dt>Average user rating</dt>
      <dd><%= building.average_user_rating %></dd>

      <dt>Neighborhood</dt>
      <dd><%= building.neighborhood %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back building, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_building_url(building), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to building, method: :delete, data: { confirm: "Do you really want to delete this building?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(building.updated_at) %> ago
  </div>
</div>
