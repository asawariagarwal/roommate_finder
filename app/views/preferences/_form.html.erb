        <% pet_friendly_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :pet_friendly, class: "form-check-label" do %>
      <%= f.check_box :pet_friendly, class: pet_friendly_class %> Pet friendly
    <% end %>
    <% if pet_friendly_was_invalid %>
      <% preference.errors.full_messages_for(:pet_friendly).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% roommie_gender_preference_class = "form-control" %>
    <% roommie_gender_preference_was_invalid = preference.errors.include?(:roommie_gender_preference) %>

    <% if was_validated %>
      <% if roommie_gender_preference_was_invalid %>
        <% roommie_gender_preference_class << " is-invalid" %>
      <% else %>
        <% roommie_gender_preference_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :roommie_gender_preference %>
    <%= f.select :roommie_gender_preference, options_for_select(Preference.roommie_gender_preferences.keys), {}, class: "form-control" %>
    <% if roommie_gender_preference_was_invalid %>
      <% preference.errors.full_messages_for(:roommie_gender_preference).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
