<% was_validated = preference.errors.any? %>

<%= form_with(model: preference, local: true, novalidate: true, class: "mb-3") do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <% budget_max_class = "form-control" %>
    <% budget_max_was_invalid = preference.errors.include?(:budget_max) %>

    <% if was_validated %>
      <% if budget_max_was_invalid %>
        <% budget_max_class << " is-invalid" %>
      <% else %>
        <% budget_max_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :budget_max %>
    <%= f.text_field :budget_max, class: budget_max_class, placeholder: "Enter budget max" %>
    <% if budget_max_was_invalid %>
      <% preference.errors.full_messages_for(:budget_max).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% preferred_move_in_class = "form-control" %>
    <% preferred_move_in_was_invalid = preference.errors.include?(:preferred_move_in) %>

    <% if was_validated %>
      <% if preferred_move_in_was_invalid %>
        <% preferred_move_in_class << " is-invalid" %>
      <% else %>
        <% preferred_move_in_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :preferred_move_in %>
    <%= f.date_select :preferred_move_in, class: preferred_move_in_class, placeholder: "Enter preferred move in" %>
    <% if preferred_move_in_was_invalid %>
      <% preference.errors.full_messages_for(:preferred_move_in).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% unit_type_class = "form-control" %>
    <% unit_type_was_invalid = preference.errors.include?(:unit_type) %>

    <% if was_validated %>
      <% if unit_type_was_invalid %>
        <% unit_type_class << " is-invalid" %>
      <% else %>
        <% unit_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :unit_type %>
    <%= f.select :unit_type, options_for_select(Preference.unit_types.keys), {}, class: "form-control" %>
    <% if unit_type_was_invalid %>
      <% preference.errors.full_messages_for(:unit_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% cleanliness_class = "form-control" %>
    <% cleanliness_was_invalid = preference.errors.include?(:cleanliness) %>

    <% if was_validated %>
      <% if cleanliness_was_invalid %>
        <% cleanliness_class << " is-invalid" %>
      <% else %>
        <% cleanliness_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :cleanliness %>
    <%= f.number_field :cleanliness, class: cleanliness_class, placeholder: "Enter cleanliness" %>
    <% if cleanliness_was_invalid %>
      <% preference.errors.full_messages_for(:cleanliness).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% hosting_class = "form-control" %>
    <% hosting_was_invalid = preference.errors.include?(:hosting) %>

    <% if was_validated %>
      <% if hosting_was_invalid %>
        <% hosting_class << " is-invalid" %>
      <% else %>
        <% hosting_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :hosting %>
    <%= f.number_field :hosting, class: hosting_class, placeholder: "Enter hosting" %>
    <% if hosting_was_invalid %>
      <% preference.errors.full_messages_for(:hosting).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% neighborhood_class = "form-control" %>
    <% neighborhood_was_invalid = preference.errors.include?(:neighborhood) %>

    <% if was_validated %>
      <% if neighborhood_was_invalid %>
        <% neighborhood_class << " is-invalid" %>
      <% else %>
        <% neighborhood_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :neighborhood %>
    <%= f.text_field :neighborhood, class: neighborhood_class, placeholder: "Enter neighborhood" %>
    <% if neighborhood_was_invalid %>
      <% preference.errors.full_messages_for(:neighborhood).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% note_class = "form-control" %>
    <% note_was_invalid = preference.errors.include?(:note) %>

