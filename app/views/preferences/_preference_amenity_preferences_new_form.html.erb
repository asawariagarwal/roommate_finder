<!-- Form amenity_preference start -->
<%= form_with(model: @amenity_preference, local: true) do |f| %>
<!-- Form amenity_preference end -->

  <!-- Label and input for amenity_id start -->
  <div class="form-group">
    <%= f.label :amenity_id %>

    <!-- Input for amenity_id start -->
    <%= f.text_field :amenity_id, class: "form-control" %>
    <!-- Input for amenity_id end -->
  </div>
  <!-- Label and input for amenity_id end -->

  <!-- Label and input for preference_id start -->
  <!-- Input for preference_id start -->
  <%= f.hidden_field :preference_id, value: @preference.id %>
  <!-- Input for preference_id end -->
  <!-- Label and input for preference_id end -->

  <%= f.submit "Create amenity preference", class: "btn btn-block btn-outline-secondary" %>
<% end %>
