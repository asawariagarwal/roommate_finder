<%= search_form_for @q, :class => collapse_search_form, :id => "listings_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :earliest_move_in, "Earliest move in" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='earliest_move_ingteqPicker' data-target-input="nearest">
          <%= f.text_field :earliest_move_in_gteq, :class => "form-control datetimepicker-input", :placeholder => "Earliest move in greater than or equal to", :data => {:target => '#earliest_move_ingteqPicker'} %>
          <div class="input-group-append" data-target='#earliest_move_ingteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='earliest_move_inlteqPicker' data-target-input="nearest">
          <%= f.text_field :earliest_move_in_lteq, :class => "form-control datetimepicker-input", :placeholder => "Earliest move in less than or equal to", :data => {:target => '#earliest_move_inlteqPicker'} %>
          <div class="input-group-append" data-target='#earliest_move_inlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#earliest_move_ingteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#earliest_move_inlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#earliest_move_ingteqPicker').on("dp.change", function (e) {
              $('#earliest_move_inlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#earliest_move_inlteqPicker').on("dp.change", function (e) {
              $('#earliest_move_ingteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :price, "Price" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :price_gteq, :class => "form-control", :placeholder => "Price greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :price_lteq, :class => "form-control", :placeholder => "Price less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :lease_length, "Lease length" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :lease_length_gteq, :class => "form-control", :placeholder => "Lease length greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :lease_length_lteq, :class => "form-control", :placeholder => "Lease length less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :building_name_cont, "Building name contains" %>
    <%= f.text_field :building_name_cont, :class => "form-control", :placeholder => "Building name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/listings" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#listings_filters">
  Show filters
</a>
