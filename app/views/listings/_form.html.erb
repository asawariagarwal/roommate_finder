<% was_validated = listing.errors.any? %>

<%= form_with(model: listing, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% building_class = "form-control" %>
    <% building_was_invalid = listing.errors.include?(:building) %>

    <% if was_validated %>
      <% if building_was_invalid %>
        <% building_class << " is-invalid" %>
      <% else %>
        <% building_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :building_id %>
    <%= f.collection_select :building_id, Building.all, :id, :to_s, {}, class: "form-control" %>
    <% if building_was_invalid %>
      <% listing.errors.full_messages_for(:building).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% unit_type_class = "form-control" %>
    <% unit_type_was_invalid = listing.errors.include?(:unit_type) %>

    <% if was_validated %>
      <% if unit_type_was_invalid %>
        <% unit_type_class << " is-invalid" %>
      <% else %>
        <% unit_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :unit_type %>
    <%= f.select :unit_type, options_for_select(Listing.unit_types.keys), {}, class: "form-control" %>
    <% if unit_type_was_invalid %>
      <% listing.errors.full_messages_for(:unit_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% lease_length_class = "form-control" %>
    <% lease_length_was_invalid = listing.errors.include?(:lease_length) %>

    <% if was_validated %>
      <% if lease_length_was_invalid %>
        <% lease_length_class << " is-invalid" %>
      <% else %>
        <% lease_length_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :lease_length %>
    <%= f.number_field :lease_length, class: lease_length_class, placeholder: "Enter lease length" %>
    <% if lease_length_was_invalid %>
      <% listing.errors.full_messages_for(:lease_length).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% price_class = "form-control" %>
    <% price_was_invalid = listing.errors.include?(:price) %>

    <% if was_validated %>
      <% if price_was_invalid %>
        <% price_class << " is-invalid" %>
      <% else %>
        <% price_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :price %>
    <%= f.text_field :price, class: price_class, placeholder: "Enter price" %>
    <% if price_was_invalid %>
      <% listing.errors.full_messages_for(:price).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% earliest_move_in_class = "form-control" %>
    <% earliest_move_in_was_invalid = listing.errors.include?(:earliest_move_in) %>

    <% if was_validated %>
      <% if earliest_move_in_was_invalid %>
        <% earliest_move_in_class << " is-invalid" %>
      <% else %>
        <% earliest_move_in_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :earliest_move_in %>
    <%= f.date_select :earliest_move_in, class: earliest_move_in_class, placeholder: "Enter earliest move in" %>
    <% if earliest_move_in_was_invalid %>
      <% listing.errors.full_messages_for(:earliest_move_in).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% floorplan_class = "form-control" %>
    <% floorplan_was_invalid = listing.errors.include?(:floorplan) %>

    <% if was_validated %>
      <% if floorplan_was_invalid %>
        <% floorplan_class << " is-invalid" %>
      <% else %>
        <% floorplan_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :floorplan %>
    <%= f.file_field :floorplan, class: "form-control" %>
    <% if floorplan_was_invalid %>
      <% listing.errors.full_messages_for(:floorplan).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
