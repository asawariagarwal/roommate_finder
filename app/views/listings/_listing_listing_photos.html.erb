<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Listing Photos

    <a data-toggle="collapse" href="#listing_listing_photos_new_form">
      Add listing photo
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @listing.listing_photos.each do |listing_photo| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to listing_photo, listing_photo %>

        <%= link_to listing_photo, method: :delete, data: { confirm: "Do you really want to delete this listing_photo" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="listing_listing_photos_new_form">
        <%= render partial: "listings/listing_listing_photos_new_form" %>
      </div>
    </div>

  </ul>
</div>
